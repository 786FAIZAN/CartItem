@model CartItem.Models.Item

@{
    ViewData["Title"] = "Add Item";
}

<h2>Add Item</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" required />
    </div>
    <div class="form-group">
        <label asp-for="AvlQuantity"></label>
        <input asp-for="AvlQuantity" class="form-control" type="number" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Item</button>
</form>
